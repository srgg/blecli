{
    "name": "blex",
    "version": "0.1.0",
    "description": "A modern compile-time BLE framework for C++20 embedded systems. Enables zero-runtime, declarative BLE design with support for GCC 12.2.0+ (espressif32@6.0.0+).",
    "keywords": ["ble", "bluetooth", "nimble", "esp32", "cpp20", "metaprogramming"],
    "authors": [
      {
        "name": "Serhii Halkin",
        "email": "srggal42@gmail.com"
      }
    ],
    "frameworks": ["arduino", "espidf"],
    "platforms": ["espressif32@^6.0.0"],
    "dependencies": {
      "h2zero/NimBLE-Arduino": "^1.4.0"
    },
    "build": {
      "flags": ["-std=gnu++2a", "-fconcepts"],
      "unflags": ["-std=c++17", "-std=gnu++17"]
    },
    "export": {
        "exclude": [
            ".github",
            ".gitignore"
        ]
    }
}